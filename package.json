{
  "name": "naver-store-automation",
  "version": "1.0.0",
  "description": "네이버 스마트스토어 AI 자동화 시스템 - 검색광고 및 상품 최적화",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "daily-job": "tsx src/jobs/daily-automation.ts",
    "electron:dev": "electron electron/main.js",
    "electron:build": "electron-builder",
    "db:migrate": "tsx src/db/migrations/run.ts",
    "db:seed": "tsx src/db/seeds/run.ts",
    "sync-products": "tsx fetch-products.ts",
    "discover-keywords": "tsx src/jobs/discover-keywords.ts",
    "enrich-metrics": "tsx src/scripts/enrich-metrics.ts",
    "classify-keywords": "tsx src/scripts/classify-keywords.ts"
  },
  "keywords": [
    "naver",
    "smartstore",
    "automation",
    "ai",
    "ab-testing",
    "optimization"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@slack/webhook": "^7.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "axios": "^1.7.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^16.4.5",
    "pg": "^8.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.2.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
